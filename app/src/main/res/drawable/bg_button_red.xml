<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#991B1B"
                android:endColor="#7F1D1D"
                android:angle="270"/>
            <corners android:radius="22dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#FF4D4D"
                android:centerColor="#EF4444"
                android:endColor="#B91C1C"
                android:angle="270"/>
            <corners android:radius="22dp"/>
        </shape>
    </item>
</selector>
