<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

    <!-- More premium gradient -->
    <gradient
        android:startColor="#FF2D55"
        android:centerColor="#FF4D8D"
        android:endColor="#7C3AED"
        android:angle="45"
        android:type="linear" />

    <!-- Smoother corners -->
    <corners android:radius="28dp"/>

    <!-- Softer border (not too harsh) -->
    <stroke
        android:width="1dp"
        android:color="#40FFFFFF"/>

    <!-- Adds a tiny inner padding feel -->
    <padding
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp"/>
</shape>
