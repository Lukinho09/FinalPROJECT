<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient background -->
    <gradient
        android:startColor="#FF512F"
        android:endColor="#DD2476"
        android:angle="45"/>

    <!-- Rounded corners -->
    <corners android:radius="24dp"/>

    <!-- Optional border -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF"/>
</shape>
