<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6FB"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:background="@drawable/bg_card"
            android:elevation="10dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DFS Visualizer"
                android:textColor="#111827"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Tap a vertex to select start"
                android:textColor="#6B7280"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- GRAPH CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@drawable/bg_card"
            android:elevation="10dp"
            android:padding="10dp"
            android:layout_marginBottom="14dp">

            <com.example.algorithmvisualizer.DFS.GraphVisual
                android:id="@+id/graphView"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="#EEF2FF" />
        </LinearLayout>

        <!-- CONTROLS CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:elevation="10dp"
            android:padding="16dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Controls"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#111827"
                android:layout_marginBottom="10dp"/>

            <!-- INPUT + ADD -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/inputEdge"
                    android:layout_width="0dp"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:hint="Add vertex / edge (ex: 1 2)"
                    android:inputType="text"
                    android:background="@drawable/bg_input"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:drawableStart="@android:drawable/ic_input_add"
                    android:drawablePadding="10dp"
                    android:textColor="#111827"
                    android:textColorHint="#6B7280"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="10dp"
                    android:layout_height="1dp"/>

                <!-- ADD (BLUE) -->
                <Button
                    android:id="@+id/btnAdd"
                    android:layout_width="120dp"
                    android:layout_height="54dp"
                    android:text="Add"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_button_primary"
                    android:backgroundTint="@null"
                    app:backgroundTint="@null"
                    android:stateListAnimator="@null"
                    android:elevation="12dp"
                    android:drawableStart="@android:drawable/ic_menu_add"
                    android:drawablePadding="8dp"/>
            </LinearLayout>

            <!-- START DFS (RED) -->
            <Button
                android:id="@+id/btnStart"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Start DFS"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/white"

                android:background="@drawable/bg_button_red"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:stateListAnimator="@null"

                android:elevation="14dp"
                android:layout_marginTop="14dp"
                android:drawableStart="@android:drawable/ic_media_play"
                android:drawablePadding="10dp"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="16dp"/>

    </LinearLayout>
</ScrollView>
