<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="#F2F2F2">

    <!-- Title -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="26dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose a search algorithm"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="#FF0000"
            android:letterSpacing="0.03"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <!-- Linear Search Button -->
    <Button
        android:id="@+id/btnLinear"
        android:layout_width="300dp"
        android:layout_height="82dp"
        android:text="Linear Search"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_primary_button_ripple"
        android:elevation="12dp"
        android:clickable="true"
        android:focusable="true" />

    <View
        android:layout_width="1dp"
        android:layout_height="16dp" />

    <!-- Binary Search Button -->
    <Button
        android:id="@+id/btnBinary"
        android:layout_width="300dp"
        android:layout_height="82dp"
        android:background="@drawable/bg_secondary_button_ripple"
        android:clickable="true"
        android:elevation="12dp"
        android:focusable="true"
        android:text="Binary Search"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />


</LinearLayout>
