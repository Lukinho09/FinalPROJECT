<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6FB"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- HEADER CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:elevation="10dp"
            android:padding="16dp"
            android:layout_marginBottom="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Binary Search"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#111827"/>

        </LinearLayout>

        <!-- CARD: Setup -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_marginBottom="14dp"
            android:elevation="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/inputN"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:hint="Enter N (array size)"
                android:inputType="number"
                android:background="@drawable/bg_input"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:drawableStart="@android:drawable/ic_menu_sort_by_size"
                android:drawablePadding="10dp"
                android:textColor="#111827"
                android:textColorHint="#6B7280"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnEnterN"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text=" Create Array"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_button_primary"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:stateListAnimator="@null"
                android:layout_marginTop="12dp"
                android:elevation="12dp"
                android:drawableStart="@android:drawable/ic_input_add"
                android:drawablePadding="10dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>
        </LinearLayout>

        <!-- CARD: Search -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_marginBottom="14dp"
            android:elevation="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/inputTarget"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:hint="Target number"
                android:inputType="number|numberSigned"
                android:background="@drawable/bg_input"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:drawablePadding="10dp"
                android:textColor="#111827"
                android:textColorHint="#6B7280"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btnStartSearch"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text=" Start Binary Search"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_button_primary"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:stateListAnimator="@null"
                android:layout_marginTop="12dp"
                android:elevation="12dp"
                android:drawableStart="@android:drawable/ic_media_play"
                android:drawablePadding="10dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>

            <!-- Step controls -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="12dp">

                <!-- Back (gray) -->
                <Button
                    android:id="@+id/btnBackStep"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text=" Back"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_button_gray"
                    android:backgroundTint="@null"
                    app:backgroundTint="@null"
                    android:stateListAnimator="@null"
                    android:elevation="10dp"
                    android:drawableStart="@android:drawable/ic_media_previous"
                    android:drawablePadding="8dp"/>

                <View
                    android:layout_width="12dp"
                    android:layout_height="1dp"/>

                <!-- Next (blue) -->
                <Button
                    android:id="@+id/btnNextStep"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text=" Next"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_button_green"
                    android:backgroundTint="@null"
                    app:backgroundTint="@null"
                    android:stateListAnimator="@null"
                    android:elevation="10dp"
                    android:drawableStart="@android:drawable/ic_media_next"
                    android:drawablePadding="8dp"/>
            </LinearLayout>

            <!-- Step info -->
            <TextView
                android:id="@+id/txtStep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2563EB"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/txtRange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#7C3AED"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/txtResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_result"
                android:text=""
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginTop="10dp"
                android:padding="14dp"/>
        </LinearLayout>

        <!-- CARD: Array View -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:elevation="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Array"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#111827"
                android:layout_marginBottom="10dp"/>

            <!-- Auto Sort (GREEN) -->
            <Button
                android:id="@+id/btnAutoSort"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:text=" Auto Sort Array"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_button_green"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:stateListAnimator="@null"
                android:elevation="10dp"
                android:drawableStart="@android:drawable/ic_menu_sort_alphabetically"
                android:drawablePadding="10dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="8dp">

                    <GridLayout
                        android:id="@+id/indexRow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:columnCount="1"
                        android:rowCount="1"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A"
                            android:textStyle="bold"
                            android:textSize="22sp"
                            android:textColor="#111827"
                            android:layout_marginEnd="12dp"/>

                        <GridLayout
                            android:id="@+id/valueRow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:columnCount="1"
                            android:rowCount="1"/>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="16dp"/>
    </LinearLayout>
</ScrollView>
